<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Kubix.View.DownloaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kubix.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource PageBackground}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Downloader"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="36"/>
        <Grid Grid.Row="1"
              Background="{ThemeResource SectionPanelBackground}"
              CornerRadius="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox Grid.ColumnSpan="3"
                     Text="{x:Bind ViewModel.Url, Mode=TwoWay}"
                     HorizontalAlignment="Stretch"
                     PlaceholderText="Set Url to download..."
                     Margin="12"/>
            <StackPanel Grid.Column="0"
                        Grid.Row="1"
                        Orientation="Vertical"
                        Spacing="8">
                <Button Content="Select Folder"
                        HorizontalAlignment="Center"
                        CornerRadius="12"
                        Margin="0,10"
                        Click="{x:Bind ViewModel.ButtonFolderPicker_Click}"/>
                <TextBlock Text="{x:Bind ViewModel.DownloadPath, Mode=OneWay}" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Grid.Row="1"
                        Orientation="Vertical"
                        Margin="0,10">
                <StackPanel Padding="12">
                    <Button HorizontalAlignment="Center"
                        Height="64"
                        Width="64"
                        CornerRadius="32"
                        Click="{x:Bind ViewModel.ButtonDownload_Click}">
                        <Image Source="ms-appx:///Assets/download_feature.png" 
                           Height="32" 
                           Width="32"/>
                    </Button>
                    <TextBlock Text="Download" 
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <ListView Grid.Row="2"
                  ItemsSource="{x:Bind ViewModel.DownloadItems, Mode=OneWay}"
                  SelectionMode="None"
                  ItemTemplate="{StaticResource DownloadModel}">
        </ListView>
    </Grid>
</Page>
