<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Kubix.View.TerminalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kubix.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Kubix.Helpers"
    mc:Ignorable="d"
    Background="{ThemeResource PageBackground}">

    <Page.Resources>
        <DataTemplate x:Key="CommandTemplate">
            <Grid VerticalAlignment="Center"
                  Height="20" Margin="10,2,10,0">
                <TextBlock Text="{Binding}"
                           FontSize="12"
                           FontFamily="Consolas"
                           TextTrimming="CharacterEllipsis"/>
                <ToolTipService.ToolTip>
                    <ToolTip Content="{Binding}"/>
                </ToolTipService.ToolTip>
            </Grid>
        </DataTemplate>
        <Style x:Key="CommandsStyleListView" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
        </Style>
    </Page.Resources>
        
    <Grid Padding="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <ProgressRing x:Name="WeatherProgressRing"
                          IsActive="{x:Bind ViewModel.IsWaitingFinishCommand, Mode=OneWay}"
                          Background="{ThemeResource LoadingBackgroundColor}"
                          Foreground="{ThemeResource LoadingForegroundColor}"
                          Width="100" 
                          Height="100"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            
            <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto" 
                      VerticalScrollMode="Auto"
                      Loaded="{x:Bind ViewModel.ScrollViewer_Loaded}">
                <TextBlock x:Name="OutputTextBlock"                      
                           Text="{x:Bind ViewModel.TerminalOutput, Mode=OneWay}"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           IsTextSelectionEnabled="True"/>
            </ScrollViewer>

            <TextBlock Grid.Row="1"
                       Text="{x:Bind ViewModel.CurrentDirectory, Mode=OneWay}"
                       FontWeight="Bold"
                       Margin="10"
                       IsTextSelectionEnabled="True"/>

            <TextBox x:Name="CommandTextBox"
                 Grid.Row="2"
                 Text="{x:Bind ViewModel.TerminalInput, Mode=TwoWay}"
                 FontFamily="Consolas"
                 PlaceholderText="{x:Bind helpers:Stringer.GetString('KB_TypeAndEnter')}"
                 KeyDown="{x:Bind ViewModel.CommandTextBox_KeyDown}" />
        </Grid>

        <Grid Grid.Column="1" 
              CornerRadius="18"
              Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  CornerRadius="18"
                  Margin="0,0,0,10"
                  Background="{ThemeResource SectionPanelBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Bind helpers:Stringer.GetString('KB_LastCommands')}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="12"/>
                <ListView Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.LastCommands, Mode=OneWay}"
                          ItemTemplate="{StaticResource CommandTemplate}"
                          ItemContainerStyle="{StaticResource CommandsStyleListView}"
                          SelectionChanged="{x:Bind ViewModel.ListView_SelectionChanged}"/>
            </Grid>
            <Grid Grid.Row="1"
                  CornerRadius="18"
                  Background="{ThemeResource SectionPanelBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{x:Bind helpers:Stringer.GetString('KB_DefaultCommands')}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="12"/>
                <ListView Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.DefaultCommands, Mode=OneWay}"
                          ItemTemplate="{StaticResource CommandTemplate}"
                          ItemContainerStyle="{StaticResource CommandsStyleListView}"
                          SelectionChanged="{x:Bind ViewModel.ListView_SelectionChanged}"/>
            </Grid>
        </Grid>

    </Grid>
</Page>
