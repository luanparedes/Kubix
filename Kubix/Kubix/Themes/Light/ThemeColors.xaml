<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Themes XAML -->

    <SolidColorBrush x:Key="AppBackground" Color="{ThemeResource AppLightBackgroungColor}"/>
    <SolidColorBrush x:Key="PageBackground" Color="{ThemeResource PageLightBackgroungColor}"/>

    <SolidColorBrush x:Key="TitleMainTexts" Color="{ThemeResource TextPalleteForegroundColor}"/>
    <SolidColorBrush x:Key="AppMainTexts" Color="{ThemeResource Black}"/>

    <SolidColorBrush x:Key="SectionPanelBackground" Color="{ThemeResource SectionLightBackgroundColor}"/>

    <!-- Browser Page -->
    <SolidColorBrush x:Key="TabItemBackground" Color="{ThemeResource BrowserLightTabBackgroundColor}"/>

    <!-- Features Menu -->
    <SolidColorBrush x:Key="VerticalBarSelectedFeature" Color="{ThemeResource SelectedBarBackgroundColorWhite}"/>

</ResourceDictionary>
